{
    "name": "@piotar/pkg-sync",
    "version": "1.7.1",
    "description": "A utility for synchronization multiple packages, without any symlinks and any changes in projects(package.json, etc.).",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/piotar/pkg-sync.git"
    },
    "keywords": [
        "cli",
        "copy files",
        "copy projects",
        "sync packages",
        "synchronization packages",
        "watch files",
        "dev-tool"
    ],
    "author": "Piotr Tarasiuk",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/piotar/pkg-sync/issues"
    },
    "homepage": "https://github.com/piotar/pkg-sync",
    "main": "./dist/cli.js",
    "bin": {
        "pkg-sync": "./dist/cli.js"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=16.7.0"
    },
    "scripts": {
        "dev": "tsc --watch",
        "prebuild": "rimraf dist",
        "build": "tsc",
        "type-check": "tsc --noEmit",
        "prepare": "husky install",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "chalk": "4.1.2",
        "commander": "12.1.0",
        "picomatch": "4.0.2",
        "prompts": "2.4.2"
    },
    "devDependencies": {
        "@types/node": "20.12.13",
        "@types/picomatch": "2.3.3",
        "@types/prompts": "2.4.9",
        "husky": "9.0.11",
        "lint-staged": "15.2.2",
        "prettier": "3.2.5",
        "rimraf": "5.0.7",
        "typescript": "5.4.5"
    },
    "lint-staged": {
        "**/*.{js,ts,json}": "prettier --write"
    }
}
